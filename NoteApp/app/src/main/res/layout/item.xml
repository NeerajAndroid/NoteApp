<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:layout_below="@id/delete_icon"
            android:layout_alignParentRight="true"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/item_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_note_gist"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="120dp"
            style="@style/item_gist"/>
        <TextView
            android:id="@+id/tv_last_updated_date"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/tv_note_gist"
            style="@style/item_date"
            android:text="date"/>
        <ImageView
            android:id="@+id/iv_heart"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:foregroundGravity="right"
            style="@style/item_fav" />
        <ImageView
            android:id="@+id/iv_fav"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_heart"
            style="@style/item_stare" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_bg">

        </View>

    </RelativeLayout>
</FrameLayout>
