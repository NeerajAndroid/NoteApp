<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="DetailScreenTheme" parent="AppTheme">
    <item name="android:actionMenuTextColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:textColor">@android:color/black</item>
</style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:text">title</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="item_gist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:text">status</item>

        <!--<item name="android:padding">5dp</item>-->
    </style>
    <style name="item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:layout_marginTop">20dp</item>-->
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:text">status</item>
        <!--<item name="android:paddingRight">25dp</item>-->
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:ems">7</item>-->
        <!--<item name="android:paddingTop">10dp</item>-->
    </style>
    <style name="item_fav">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/heart</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="item_stare">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>

        <item name="android:padding">10dp</item>>
        <item name="android:src">@drawable/star</item>


        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
